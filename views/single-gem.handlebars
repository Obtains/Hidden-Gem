    {{!-- {{#if loggedIn}} --}}
    <form class="comment-form">
        <div class="d-flex justify-content-around">
            <div class="col-sm-12 col-md-7 d-flex justify-content-between flex-wrap">
                {{#if gem.comments}}
                {{!-- <h3 class="col-sm-12 col-md-7"> {{comments.length}} {{format_plural "comment" comments.length}}</h3> --}}
                <h3 class="col-sm-12 col-md-7">1 Comment</h3> 
                {{else}}
                {{!-- <h3 class="col-sm-12 col-md-7">Be the first to comment</h3> --}}
                {{/if}}
                <input class="comment-input" name="comment-body" placeholder="Comment..." rows="1"></input>
                <button class="ml-1 mr-2 comment-btn" type="submit">Add Comment</button>
            </div>
        <div class="col-sm-12 col-md-3 d-flex justify-content-center flex-wrap side-border">
            {{!-- <h3 class="w-100 text-center"> {{vote_count}} {{format_plural "point" vote_count}}</h3> --}}
            <h3 class="w-100 text-center">2 Votes</h3>
            <button class="upvote-btn " type="submit">Upvote</button>
        </div>
        </div>
    </form>
    {{!-- {{/if}} --}}

    {{> comments gem.comments}}

    {{#if loggedIn}}
    <script src="/javascript/comment.js"></script>
    {{/if}}
</article>

